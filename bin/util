#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function update-configuration() {
  if marker_present java7 || [ ${1:-undefined} == java7 ]
  then
    export JAVA_HOME=$OPENSHIFT_IMMUTANT_JDK7
  else
    export JAVA_HOME=$OPENSHIFT_IMMUTANT_JDK6
  fi

  echo $JAVA_HOME > $OPENSHIFT_IMMUTANT_DIR/env/JAVA_HOME
  echo "$JAVA_HOME/bin:$M2_HOME/bin:$OPENSHIFT_IMMUTANT_DIR/bin/tools" > $OPENSHIFT_IMMUTANT_DIR/env/OPENSHIFT_IMMUTANT_PATH_ELEMENT
}
